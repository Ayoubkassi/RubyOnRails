

<tr id="<%= dom_id friend %>">
    <td><%= friend.first_name %></td>
    <td><%= friend.last_name %></td>
    <td><%= friend.email %></td>
    <td><%= friend.phone %></td>
    <td><%= friend.github %></td>
    <div class="container">
    <td class="row">
      <div class="">
        <button class="btn btn-info"><%= link_to "Show this friend", friend , class:"text-white" %></button>
      </div>
      <div class="">
        <%= button_to "Destroy this friend", friend, method: :delete , class:"btn btn-danger ml-2" %>
      </div>
    </td>
    </div>
</tr>
